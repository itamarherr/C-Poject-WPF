<Window x:Class="ProjectGallery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectGallery"
        xmlns:common="clr-namespace:Common.Controls;assembly=Common"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Background="WhiteSmoke">
                <Image Source="/ProjectGallery;component/Resources/API icon.png" Width="24" Height="24" Margin="10"/>
                <Image Source="/ProjectGallery;component/Resources/CSharp4 icon.png" Width="24" Height="24" Margin="10"/>
                <Image Source="/ProjectGallery;component/Resources/.NET icon.png" Width="24" Height="24" Margin="10"/>
                <Image Source="/ProjectGallery;component/Resources/OOP icon.png" Width="24" Height="24" Margin="10"/>
                <Image Source="/ProjectGallery;component/Resources/json icon.png" Width="24" Height="24" Margin="10"/>
            </StackPanel>
            <TextBlock Grid.Row="2" 
                       Text="Welcome to my apps gallery!" 
                       FontSize="30" 
                       TextAlignment="Center" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="10"/>

            <TextBlock Grid.Row="3" 
                       Text="Try one of my Apps" 
                       FontSize="20" 
                       TextAlignment="Center" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Margin="10"/>

            <WrapPanel Grid.Row="4" 
                       Margin="10" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top"
                       Name="ProjectsPanel"
                       ItemWidth="200"
                       ItemHeight="200"/>

            <common:HeaderMenu Grid.Row="0" />
        </Grid>
    </Viewbox>

</Window>
