<UserControl x:Class="ProjectGallery.Controls.ProjectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectGallery.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Button Name="MainButton" Margin="10, 10, 10, 10">
        <StackPanel Orientation="Vertical" Margin="10">
            <Image Source="{Binding Icon}"  Width="70" Height="70" Margin="20" />
            <TextBlock Text="{Binding Name}" TextAlignment="Center" Name="TBprojectName" />
            <TextBlock Text="{Binding IsRecommended}" TextAlignment="Center" Name="TBprojectRecommended" />
        </StackPanel>
    </Button>
</UserControl>
